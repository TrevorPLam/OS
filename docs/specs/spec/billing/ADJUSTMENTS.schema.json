{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "spec/billing/ADJUSTMENTS.schema.json",
  "title": "BillingAdjustment",
  "type": "object",
  "description": "Billing adjustments are append-only records that never overwrite original invoices or lines.",
  "additionalProperties": false,
  "required": [
    "adjustment_id",
    "adjustment_type",
    "reason",
    "references_to_affected_invoice_or_line",
    "created_at",
    "created_by"
  ],
  "properties": {
    "adjustment_id": {
      "type": "string",
      "description": "Immutable identifier for the adjustment record."
    },
    "adjustment_type": {
      "type": "string",
      "enum": ["credit", "add_on", "revised_invoice"],
      "description": "Adjustment classification."
    },
    "reason": {
      "type": "string",
      "description": "Human-readable rationale for the adjustment."
    },
    "references_to_affected_invoice_or_line": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["invoice_id"],
        "properties": {
          "invoice_id": {
            "type": "string",
            "description": "Identifier for the impacted invoice."
          },
          "invoice_line_id": {
            "type": ["string", "null"],
            "description": "Identifier for the impacted invoice line, when applicable."
          }
        }
      },
      "description": "References to invoices or lines affected by this adjustment."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp."
    },
    "created_by": {
      "type": "string",
      "description": "Actor identifier who created the adjustment."
    }
  }
}
