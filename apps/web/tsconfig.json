{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../packages/config/typescript-config/react.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@os/ui": ["../../packages/ui/src"],
      "@os/utils": ["../../packages/utils/src"],
      "@os/contracts": ["../../packages/contracts"],
      "@os/api-sdk": ["../../packages/api-sdk/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
