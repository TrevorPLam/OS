# ----------------------------------------------------------------------------
# Django
# ----------------------------------------------------------------------------
# Required: secret key used for cryptographic signing.
# Generate a strong random value for production (50+ chars).
DJANGO_SECRET_KEY="your-secret-key-here-change-me"

# Optional (defaults to True). Set to False in production.
DJANGO_DEBUG="True"

# Required in production when DJANGO_DEBUG=False.
# Comma-separated list of allowed hosts/domains.
DJANGO_ALLOWED_HOSTS="localhost,127.0.0.1"

# ----------------------------------------------------------------------------
# PostgreSQL (Required)
# ----------------------------------------------------------------------------
POSTGRES_DB="os_dev"
POSTGRES_USER="os_user"
POSTGRES_PASSWORD="change-me"
POSTGRES_HOST="localhost"

# Optional but commonly set.
POSTGRES_PORT="5432"

# ----------------------------------------------------------------------------
# AWS S3 (Required in production when DJANGO_DEBUG=False)
# ----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_STORAGE_BUCKET_NAME="your-s3-bucket-name"

# ----------------------------------------------------------------------------
# Stripe (Required in production when DJANGO_DEBUG=False)
# ----------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_change-me"
STRIPE_WEBHOOK_SECRET="whsec_change-me"

# ----------------------------------------------------------------------------
# Webhook security (optional unless integrations are enabled)
# ----------------------------------------------------------------------------
# DocuSign integration
DOCUSIGN_CLIENT_ID=""
DOCUSIGN_WEBHOOK_SECRET=""

# Twilio integration
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
